<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/pvCamera"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/ivPicturePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/camera_return_button_margins"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btnBackToCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/camera_return_button_margins"
        android:layout_marginTop="@dimen/camera_return_button_margins"
        android:layout_marginEnd="@dimen/camera_return_button_margins"
        android:layout_marginBottom="@dimen/camera_return_button_margins"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_x_button_camera" />

    <ImageButton
        android:id="@+id/btnTakeAPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/btn_take_a_photo"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_camera_take_picture"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/btnSaveImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/accept_photo_button_bottom_margin"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_image_saved_v2"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btnRetakeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/btn_take_a_photo"
        android:layout_marginBottom="@dimen/retake_img_margin_bottom"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_image_retake"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btnDiscardImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/btn_take_a_photo"
        android:layout_marginBottom="@dimen/trash_can_img_margin_bottom"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_trash_can"
        android:visibility="gone" />

</RelativeLayout>