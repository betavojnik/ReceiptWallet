<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorSecondary"
    app:cardCornerRadius="@dimen/dialog_radius">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_height"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:textColor="?attr/colorSecondary"
            android:background="?attr/colorPrimary"
            android:textSize="@dimen/tv_text_size"
            android:paddingStart="@dimen/dialog_title_padding"
            android:paddingEnd="@dimen/dialog_title_padding"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_horizontal_line_height"
            android:background="?attr/colorSecondary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_button_height"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPositiveAnswer"
                android:contentDescription="@string/btnPositiveAnswer"
                android:layout_width="@dimen/dialog_button_width"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:gravity="center"
                android:background="?attr/colorPrimary"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/dialog_button_text_size" />

            <View
                android:layout_width="@dimen/dialog_vertical_line_width"
                android:layout_height="match_parent"
                android:background="?attr/colorSecondary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNegativeAnswer"
                android:contentDescription="@string/btnNegativeAnswer"
                android:layout_width="@dimen/dialog_button_width"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:gravity="center"
                android:background="?attr/colorPrimary"
                android:textColor="?attr/colorSecondary"
                android:textSize="@dimen/dialog_button_text_size" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
